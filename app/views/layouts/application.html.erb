<!DOCTYPE html>
<html>
  <head>
    <title>WaterTanks</title>
    <%= csrf_meta_tags %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyAdMxmqeoadgTqFE1WPpXcS98fRSSKGR9o" ></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src="javascripts/responsive.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
  	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300,700' rel='stylesheet' type='text/css'>
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>

    <header id="top_header" class="clearfix">
      <div class="wrapper">
        <h1 class="logo">Chicago Water Tanks</h1>
          <a href="#" class="menu"><i class="fa fa-bars"></i></a>
          <nav id="main_nav">
            <% if user_signed_in? %>
              <%= link_to "Add Water Tank", new_tank_location_path(anchor: 'map-a-tank')  %>
              <%= link_to "Sign Out", destroy_user_session_path, method: "delete"  %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path %>
              <%= link_to "Sign Up", new_user_registration_path %>
            <% end %>
            <a href="#">About</a>
            <a href="#">Contact</a>
          </nav>
      </div>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <% unless current_page?(controller: 'devise/sessions', action: 'new') || current_page?(controller: 'devise/registrations', action: 'new') %>
      <%= render "layouts/header" %>
    <% end %>

    <%= yield %>


  </body>

   <%= render "layouts/footer" %>

</html>
